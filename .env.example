# ==============================================
# GetCitedBy - Environment Variables
# ==============================================

# Database (SQLite - file-based, zero config)
DATABASE_URL="file:./dev.db"

# NextAuth.js
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (for Google Sign-In)
GOOGLE_CLIENT_ID="xxxxxxxxxxxx.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-xxxxxxxxxxxxxxxxxxxx"

# Email (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="GetCitedBy <noreply@getcitedby.com>"

# LLM APIs
OPENAI_API_KEY="sk-xxxxxxxxxxxxxxxxxxxx"
ANTHROPIC_API_KEY="sk-ant-xxxxxxxxxxxxxxxxxxxx"

# Stripe
STRIPE_SECRET_KEY="sk_live_xxxxxxxxxxxxxxxxxxxx"
STRIPE_PUBLISHABLE_KEY="pk_live_xxxxxxxxxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxx"

# Stripe (client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_xxxxxxxxxxxxxxxxxxxx"

# Stripe Price IDs (GetCitedBy Pro)
STRIPE_PRICE_PROFESSIONAL_MONTHLY="price_xxxx"
STRIPE_PRICE_PROFESSIONAL_YEARLY="price_xxxx"
STRIPE_PRICE_BUSINESS_MONTHLY="price_xxxx"
STRIPE_PRICE_BUSINESS_YEARLY="price_xxxx"

# Swiss APIs
ZEFIX_API_URL="https://www.zefix.ch/ZefixREST/api/v1"

# App Config
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="GetCitedBy"
